!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Puppet
    %link{ :href => "/favicon.ico", :rel => "icon", :type => "image/x-icon" }/
    %link{ :href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon" }/
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'puppetshow.css', :media => 'screen, projection'
    = javascript_include_tag :defaults, 'jquery.flot', 'jquery.livequery.js'
    %script{ :src => "/timeplot/api/1.0/timeplot-api.js?local", :type => "text/javascript" }
    :javascript
      function onLoad() { }
      function onResize() { }
  %body{ :onresize => "onResize();", :onload => "onLoad();" }
    .container
      #header
        #masthead= link_to image_tag('puppet-short.png', :alt => 'PuppetShow'), '/'
        = render :partial => '/search/form'
      #content.column= yield
      #footer
        Copyright &copy;
        %span.years 2008
        = image_tag 'Reductive-100.png', :alt => 'Reductive Labs, LLC.'
