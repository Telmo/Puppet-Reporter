#content

  = javascript_include_tag "search.js"
  #search
    - form_tag(search_path, {:id => 'search_form', :method => 'get' }) do
      = radio_button_tag 'context', 'node', true, :id => 'node_context'
      %label{ :for => 'node_context' } Nodes
      = radio_button_tag 'context', 'log', false, :id => 'log_context'
      %label{ :for => 'log_context' } Logs
      %br
      = text_field_tag 'q'
      = submit_tag('Search')
  #search_results_container

